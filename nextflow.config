nextflow.enable.dsl = 2


// ---- Global Docker settings ----
docker {
  enabled = true
}

// ---- Global AWS credentials (only used if awsbatch profile is active) ----
aws {
  accessKey = '*'
  secretKey = '*'
  region = 'us-east-2'
}

// ---- Default parameters ----
params {
    input = null              // Path to input FASTQ file(s), e.g. --input "fastq_pass"
    barcodes = null           // Path to barcode file, e.g. --barcodes barcode.fa
    outdir = null             // Default output directory
    length_filter = 150
    error_rate = 0.12
    pool_ID = null
  }


// ---- Profiles ----
profiles {

  // --- For GitHub Actions CI or local dev ---
  test {
    process.executor = 'local'
    docker.enabled = true
    params {
      input = "test_data/fastq_pass"          // Path to input FASTQ file(s), e.g. --input "fastq_pass"
      barcodes = "test_data/barcodes.fa"      // Path to barcode file, e.g. --barcodes barcode.fa
      output = 'ci_output'                    // Default output directory
      length_filter = 150
      error_rate = 0.12
      pool_ID = '20250814_test'
    }
  }

  // --- Optional: production run with AWS Batch ---
  awsbatch {
    process {
      executor = 'awsbatch'
      queue = 'spot_low_priority'
      memory = '8 GB'
      cpus = 4
      
    withName:DEMUX_CORE {
        container = 'quay.io/biocontainers/cutadapt:5.0--py310h1fe012e_0' 
    }
    withName:DEMUX_SUMMARIZE {
        container = 'ubuntu:20.04' 
        memory = '4 GB'
        cpus = 2
    }
    
    withName:MERGE_FASTQ {
        container = 'ubuntu:20.04'
        memory = '4 GB'
        cpus = 2
    }
      
      
      
    }

    aws {
      accessKey = '*'
      secretKey = '*'
      region = 'us-east-2'
    }
  }
}

// ---- Process-specific settings (default local + docker) ----
process {
      executor = 'local'
      memory = '8 GB'
      cpus = 4
      
    withName:DEMUX_CORE {
        container = 'quay.io/biocontainers/cutadapt:5.0--py310h1fe012e_0' 
    }
    withName:DEMUX_SUMMARIZE {
        container = 'ubuntu:20.04' 
        memory = '4 GB'
        cpus = 2
    }
    
    withName:MERGE_FASTQ {
        container = 'ubuntu:20.04'
        memory = '4 GB'
        cpus = 2
    }
}

